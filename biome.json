{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "lineWidth": 120,
      "trailingCommas": "none",
      "indentStyle": "space",
      "lineEnding": "lf",
      "bracketSpacing": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "indentWidth": 2,
      "quoteProperties": "asNeeded",
      "attributePosition": "auto",
      "bracketSpacing": true,
      "jsxQuoteStyle": "single",
      "indentStyle": "space",
      "lineEnding": "lf",
      "lineWidth": 120,
      "bracketSameLine": true,
      "trailingCommas": "none"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
